#include <stdio.h>
#include <stdlib.h>
#include <time.h> 
#include <omp.h>




#define MAX_DIGITS 10 // Número máximo de dígitos en los números

void arrange(int, int);
int array[100], array1[100];
int i, j, temp, max, count, maxdigits = 0, c = 0;
double start, end;

void main() {

    start = omp_get_wtime();

    int t1, t2, k, t, n = 1;
    int chunk = 5;
    printf("Enter size of array: ");
    scanf("%d", &count);

    srand(time(NULL));
    fill_random(array, count, 200);

    #pragma omp parallel for
    for (int i = 0; i < count; i++) {
        array[i] = array[i];
        array1[i] = array[i];

        printf("array[%d]=%d\n", i, array1[i]);
    }

    for (i = 0; i < count; i++) {
        t = array[i]; // first element in t
        #pragma omp parallel
        while (t > 0) {
            c++;
            t = t / 10; // Find MSB
        }
        if (maxdigits < c)
            maxdigits = c; // number of digits of a each number




